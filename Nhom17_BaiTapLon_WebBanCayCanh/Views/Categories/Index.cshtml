@model CategoryViewModel

<h1>Danh sách danh mục</h1>
<button id="CategoryModalClick" class="btn btn-primary">Tạo danh mục</button>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Id</th>
            <th>Tên</th>
            <th>Danh mục cha</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         
        @if (Model.Categories != null)
        {
            int counter = 1;
            @foreach(var item in Model.Categories)
            {
                <tr>
                    <td>
                        @counter
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @if (item.ParentCategory.Id == 0)
                        {
                            <span>None</span>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.ParentCategory.Id)
                            @Html.Raw(" - ")
                            @Html.DisplayFor(modelItem => item.ParentCategory.Name)
                        }
                    </td>
                    <td>
                        <button onclick="Details(@item.Id)" class="btn btn-info">Chi tiết</button>
                        <button onclick="Edit(@item.Id)" class="btn btn-warning">Sửa</button>
                    </td>
                </tr>
                counter++;
            }
        }
    </tbody>
</table>

@*CREATE*@

<div class="madal fade modal" id="CategoryModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1>Tạo danh mục</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Create" asp-controller="Categories" method="post" data-ajax="true">
                <div class="modal-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <label asp-for="Name"></label>
                    <div>
                        <input asp-for="Name" />
                    </div>
                    <label asp-for="ParentCategoryId"></label>
                    <div class="mt-2">
                        <select asp-for="ParentCategoryId" asp-items="@Model.ParentCategoryList" class="parentCategorySelect" data-val="false">
                            
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <div>
                        <input type="submit" class="btn btn-primary" value="Tạo"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@*UPDATE*@

<div class="madal fade modal" id="UpdateCategoryModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1>Cập nhật danh mục</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form enctype="multipart/form-data" asp-action="Update" asp-controller="Products" method="post" data-ajax="true" data-ajax-success="onCreateSuccess">
                <div class="modal-body">
                    <input type="hidden" asp-for="Id" class="categoryId"/>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <label asp-for="Name"></label>
                    <div>
                        <input class="nameProduct" asp-for="Name" />
                    </div>
                    <label asp-for="ParentCategoryId"></label>
                    <div class="mt-2">
                        <select asp-for="ParentCategoryId" asp-items="@Model.ParentCategoryList" class="parentCategorySelect" data-val="false">
                            
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <div>
                        <input type="submit" class="btn btn-primary" value="Cập nhật"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

